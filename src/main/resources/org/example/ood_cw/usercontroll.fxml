<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="533.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.ood_cw.Admindash">
    <children>
        <!-- Title label -->
        <Label layoutX="82.0" layoutY="28.0" prefHeight="35.0" prefWidth="282.0" text="User Management">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>

        <!-- User ID Label and TextField -->
        <Label layoutX="82.0" layoutY="78.0" prefHeight="20.0" prefWidth="85.0" text="User_ID : ">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Label>
        <TextField fx:id="txtUserId" layoutX="164.0" layoutY="76.0" prefHeight="26.0" prefWidth="178.0" />

        <!-- Email Address Label -->
        <!-- Email Address Label and TextField -->
        <Label layoutX="45.0" layoutY="231.0" prefHeight="20.0" prefWidth="110.0" text="Email Address">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Label>
        <TextField fx:id="txtEmailAddress" layoutX="164.0" layoutY="231.0" prefHeight="26.0" prefWidth="258.0" />

        <!-- First Name Label and TextField -->
        <Label layoutX="76.0" layoutY="122.0" prefHeight="20.0" prefWidth="74.0" text="First Name">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Label>
        <TextField fx:id="txtFirstName" layoutX="164.0" layoutY="119.0" prefHeight="26.0" prefWidth="251.0" />

        <!-- Add Button -->
        <Button fx:id="btnAdd" layoutX="168.0" layoutY="279.0" mnemonicParsing="false" onAction="#navigateToUserController" prefHeight="26.0" prefWidth="74.0" text="Add" />

        <!-- Remove Button -->
        <Button fx:id="btnRemove" layoutX="300.0" layoutY="280.0" mnemonicParsing="false" onAction="#navigateToUserController" text="Remove" />

        <!-- Back Button -->
        <Button fx:id="btnBack" layoutX="423.0" layoutY="280.0" mnemonicParsing="false" onAction="#navigateToUserManagement" text="Back" />

        <!-- Last Name Label and TextField -->
        <Label layoutX="70.0" layoutY="156.0" prefHeight="20.0" prefWidth="86.0" text="Last Name">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Label>
        <TextField fx:id="txtLastName" layoutX="164.0" layoutY="153.0" prefHeight="26.0" prefWidth="251.0" />

        <!-- User Name Label and TextField -->
        <Label layoutX="70.0" layoutY="198.0" prefHeight="20.0" prefWidth="86.0" text="UserName">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Label>
        <TextField fx:id="txtUserName" layoutX="164.0" layoutY="194.0" prefHeight="26.0" prefWidth="251.0" />

        <!-- Check Button -->
        <Button fx:id="btnCheck" layoutX="383.0" layoutY="75.0" mnemonicParsing="false" onAction="#handleCheckButton" text="Check" />
    </children>
</AnchorPane>
